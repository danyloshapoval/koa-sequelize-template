{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "semi": [2, "always"],
        "max-len": ["error", { "code": 80, "ignoreUrls": true, "ignoreComments": true,  "ignoreStrings": true}],
        "no-multiple-empty-lines": ["error", { "max": 1 }],
        "indent": ["error", 2, {"SwitchCase": 1}]
    }
}
